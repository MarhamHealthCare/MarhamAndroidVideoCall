<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    android:layout_height="match_parent"
    app:cardCornerRadius="@dimen/five">

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/top_bar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="@dimen/twenty"
            android:paddingTop="@dimen/ten"
            android:paddingRight="@dimen/ten"
            android:paddingBottom="@dimen/ten">

            <com.marham.marhamvideocalllibrary.customviews.MyImageView
                android:id="@+id/top_cross_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_cross_dialog" />

            <com.marham.marhamvideocalllibrary.customviews.MyImageView
                android:id="@+id/heading"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/thirty"
                android:background="@drawable/helpline" />

            <ListView
                android:id="@+id/listview_doctor_numbers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/heading"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="@dimen/thirty"
                android:dividerHeight="10dp" />

            <com.marham.marhamvideocalllibrary.customviews.BodyText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/listview_doctor_numbers"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="Available 12/7 for your Service"
                android:textColor="@color/black"
                android:textSize="@dimen/eighteen_text_size" />
        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
