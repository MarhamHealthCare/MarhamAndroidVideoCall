<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/eighty"
    android:layout_height="wrap_content"
    android:id="@+id/parent_layout"
    android:layout_marginEnd="@dimen/ten"
    android:layout_marginTop="@dimen/five"
    android:background="@drawable/rounder_corner_light_blue_with_blue_stroke"
    android:paddingBottom="@dimen/ten">


    <com.marham.marhamvideocalllibrary.customviews.BodyText
        android:id="@+id/appointment_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten"
        android:layout_marginStart="@dimen/ten"
        android:layout_marginEnd="@dimen/ten"
        android:text="@string/saturday"
        android:textScaleX="1.1"
        android:textColor="@color/marham_blue"
        android:textSize="@dimen/twelve_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <com.marham.marhamvideocalllibrary.customviews.BodyText
        android:id="@+id/appointment_date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/twenty_five"
        android:textSize="@dimen/twelve_text_size"
        android:layout_marginBottom="@dimen/fifteen"
        android:text="@string/_12"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/marham_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appointment_day" />


</androidx.constraintlayout.widget.ConstraintLayout>