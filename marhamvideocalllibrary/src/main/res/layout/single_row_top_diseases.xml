<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_layout"
    android:layout_width="90dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/five"
    app:cardCornerRadius="@dimen/five"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/top_disease_image_view"
            android:layout_width="@dimen/thirty_five"
            android:layout_height="@dimen/thirty_five"

            android:layout_marginTop="@dimen/five"
            android:layout_marginBottom="@dimen/five"


            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.marham.marhamvideocalllibrary.customviews.BodyText
            android:id="@+id/top_disease_text_view"
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/five"
            android:layout_marginTop="@dimen/two"
            android:layout_marginEnd="@dimen/five"
            android:layout_marginBottom="@dimen/ten"
            android:ellipsize="end"
            android:maxLines="1"
            android:gravity="center"
            android:text="@string/dash"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/eleven_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top_disease_image_view" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

