<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_layout"
    android:layout_width="@dimen/hundred_fifty"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/five"
    android:elevation="@dimen/five"
    app:cardCornerRadius="@dimen/five"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/speciality_image_view"
            android:layout_width="@dimen/fifty"
            android:layout_height="@dimen/fifty"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.marham.marhamvideocalllibrary.customviews.BodyText
            android:id="@+id/speciality_text_view"
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/five"

            android:layout_marginBottom="@dimen/two"
            android:layout_marginEnd="@dimen/five"
            android:ellipsize="end"
            android:gravity="start"
            android:maxLines="1"
            android:text="@string/dash"
            android:textColor="@color/black"
            android:textSize="@dimen/thirteen_text_size"
            app:layout_constraintBottom_toBottomOf="@+id/speciality_image_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/speciality_image_view"
            app:layout_constraintTop_toTopOf="@+id/speciality_image_view" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

