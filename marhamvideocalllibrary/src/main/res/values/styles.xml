<!--        <item name="android:textAllCaps">false</item>-->
<!--        <item name="android:fontWeight">700</item>-->
<!--    </style>-->

    <!-- Customise the theme.-->
    <style name="CustomPaymentFormTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- TOOLBAR COLOR. -->
        <item name="colorPrimary">#014E78</item>

        <!--FIELDS HIGHLIGHT COLOR-->
        <item name="colorAccent">#000</item>

        <!--PAY/DONE BUTTON COLOR-->
        <item name="colorButtonNormal">#014E78</item>

        <!--HELPER LABELS AND FIELD UNSELECTED FIELD COLOR-->
        <item name="colorControlNormal">#000</item>

    </style>

<!--    <style name="NavigationDrawerStyle">-->
